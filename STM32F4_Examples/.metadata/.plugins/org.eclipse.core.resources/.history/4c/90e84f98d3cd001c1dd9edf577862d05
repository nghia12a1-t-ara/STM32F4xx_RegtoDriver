#include "GPIO_REG.h"
#include "CLOCK_REG.h"

void GPIOA_UART1_Setup(void)
{
	GPIOA_PCLK_EN();

	/* PA10 as AF mode */
	GPIOA->MODER |= (0x2 << 20);
	GPIOA->OTYPER &= ~(1 << 10);
	GPIOA->OSPEEDR |= (0x2 << 20);
	GPIOA->PUPDR |= (0x1 << 20);

	GPIOA->AFR[1] |= (0x7 << 8);
}
