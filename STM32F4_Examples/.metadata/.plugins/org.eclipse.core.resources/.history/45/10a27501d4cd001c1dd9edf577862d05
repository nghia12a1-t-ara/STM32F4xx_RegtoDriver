#include "GPIO_REG.h"
#include "CLOCK_REG.h"

void GPIOC6_UART6_Setup(void)
{
	GPIOC_PCLK_EN();

	/* PC6 as AF mode - USART6 */
	GPIOC->MODER |= (0x2 << 20);
	GPIOC->OTYPER &= ~(1 << 10);
	GPIOC->OSPEEDR |= (0x2 << 20);
	GPIOC->PUPDR |= (0x1 << 20);

	GPIOC->AFR[0] |= (0x8 << 8);
}
