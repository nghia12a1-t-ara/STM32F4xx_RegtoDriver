#include "GPIO_REG.h"
#include "CLOCK_REG.h"

void GPIOC6_UART1_Setup(void)
{
	GPIOA_PCLK_EN();

	/* PA10 as AF mode */
	GPIOC->MODER |= (0x2 << 20);
	GPIOC->OTYPER &= ~(1 << 10);
	GPIOC->OSPEEDR |= (0x2 << 20);
	GPIOC->PUPDR |= (0x1 << 20);

	GPIOC->AFR[1] |= (0x7 << 8);
}
