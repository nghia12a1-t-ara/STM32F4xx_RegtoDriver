#include <stdint.h>
#include "UART_REG.h"


int main(void)
{
	uint8_t pRxBuffer[];
	uint32_t T_ADDR = 0x20017FE0UL;

	USART_Init(UART_MODE_SLAVE);

    /* Loop forever */
	for(;;)
	{
		USART_ReceiveData(pRxBuffer, 8);
		*(uint32_t*)T_ADDR = pRxBuffer;
		T_ADDR = (uint32_t)T_ADDR + (uint32_t)4UL;
	}
}





